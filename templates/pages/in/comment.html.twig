
{% extends 'pages/in/layout.html.twig' %}


{# HEADERS #}
    {% block description %}{{ canvas.headers.description }}{% endblock %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('stylesheets/notes_article.css') }}" >
    {% endblock %}
    {% block darkmode_stylesheet %}
        {% if canvas.misc.theme_state == true %}
            <link rel="stylesheet" href="{{ asset('/stylesheets/darkmode.css') }}" watch="theme" />
        {% else %}
            <link rel="stylesheet" href="{{ asset('/stylesheets/lightmode.css') }}" watch="theme" />
        {% endif %}
    {% endblock %}
{# HEADERS - END #}


{% block page_contents %}

    {# <h1>I see you</h1> #}

    <div class="">
        <div class="comment-back-article ft-sect">
            <a href="{{ canvas.notes.article.url }}" class="a" id="comment-back-anchor"><small><i class="sm-i fa fa-arrow-left"></i></small> back</a>
        </div>
    </div>

    <div class="atc-title-cover">
        <h1 class="atc-title-lead ft-menu">{{ canvas.notes.article.title }}</h1>
    </div>

    <div class="atc-comment atc-width">

        <section class="atc-comment-caveat ft-sect" id="atc-comment-caveat">
            <p>Be frank and respectful. We have <a href="#">policies</a>, though</p>
        </section>

        {% if canvas.profile.visitor_state == false %}
            <form method="post" name="comment">
                <div class="cmt-container clear-fix">
                    <div class="cmt-user-img bck lozad" data-background-image="{{canvas.notes.viewer.display}}">
                    </div>
                    <div id="cmt-area" class="cmt-area">
                        <input type="hidden" id="comment-assistant" pid="{{canvas.notes.article.pid}}" name="{{canvas.notes.viewer.name}}" uname="{{canvas.notes.viewer.username}}" />
                        <textarea name="comment" id="cmt-area-textarea" class="cmt-area-textarea noresize ft-sect" placeholder="Comment here.."></textarea><!--
                    --><button id="cmt-area-post" class="atc-area-but opas5" disabled>Post</button>
                    </div>
                </div>
            </form>
        {% endif %}
        
        <div class="atc-comment-thoughts">
            <ul id="comment_un_list" class="ul ft-sect">
                {% for row in canvas.notes.comment %}
                    <li id="article-note-comment-park" class="nu-li ft-sect">
                        <strong><a class="a" href="{{row.profile_url}}">{{row.name}}.</a></strong>
                        <span>{{row.comment}}</span>
                        <br><small>{{row.date}}</small>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="">
        <div class="comment-back-article ft-sect">
            <a href="{{canvas.notes.article.url}}" class="a" id="comment-back-anchor"><small><i class="sm-i fa fa-arrow-left"></i></small> back</a>
        </div>
    </div>

    <br><br>
    
{% endblock page_contents %}


{% block script_modules %}
    <script type="module" type="text/javascript" src="{{  asset('/scripts/index.js')}}"></script>
    <script type="module" type="text/javascript" src="{{  asset('/scripts/article/article_verbs.js')}}"></script>
{% endblock %}