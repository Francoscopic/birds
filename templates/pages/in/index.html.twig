
{% extends 'pages/in/layout.html.twig' %}


{# HEADERS #}
    {% block title %}Home :: Netintui Notes{% endblock %}
    {% block robots %}false{% endblock %}
    {% block description %}Notes helps you share, educate and inspire with writing. And do it in just 7 paragraphs. It's for the creators who write.{% endblock %}
    {% block twitter_image %}{{ absolute_url('images/logo/logo-white-full.png') }}{% endblock %}
    {% block page_url %}{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}{% endblock %}
    {% block stylesheets %}
        <link href="{{ asset('stylesheets/thirds.css') }}" rel="stylesheet" />
    {% endblock %}
    {% block darkmode_stylesheet %}
        <link rel="stylesheet" href="{{ asset('stylesheets/lightmode.css') }}" watch="theme" >
    {% endblock %}
{# HEADERS - END #}


{# CONTENT #}
    {% block page_contents %}

        {# <h1>{{ note_title }}</h1> #}

        {# {#  #}
        {% if canvas.profile.visitor_state == true %}
            <div class="nts-host-jumbotron relative">
                <div class="nts-host-jumbotron-opacity"></div>
                <div class="nts-host-jumbotron-center">
                    <h1>For the Creators Who Write</h1>
                    <p>Notes is micro-blogging platform to Share, Educate, and Inspire with writing</p>
                </div>
            </div>
        {% endif %}
        
        <div class="nts-assembly-description">
            <h1>Latest Picks</h1>
        </div>
        <div class="nts-host-parent clear-fix">
            {# Articles #}
            {% for board in canvas.notes %}
                <div class="nts-host relative">
                    <span id="page-assistant" class="hd" pid="" puid="" uid="" read="" title="" poster="" save_state="" like_state="" unlike_state=""></span>
                    <a href="{{ board.post_url }}" class="vw-anchor nts-host-anchor a">
                        <div class="nts-host-display lozad bck relative" data-background-image="{{ asset(board.cover) }}">
                            <div class="nts-host-display-type nt-ui-rad4 ft-sect "><span>photo</span></div>
                            <div class="nts-host-display-filter"></div>
                        </div>
                        <div class="nts-host-verb ft-sect">
                            <p>
                                <strong title="Paragraphs">{{ board.paragraphs }}</strong><span class=""> paragraphs</span>
                            </p>
                        </div>
                        <div id="nts-host-title" class="nts-host-title">
                            <p class="trn3-color">{{ board.title }}</p>
                        </div>
                    </a>
                    <div class="nts-host-verb-author ft-sect">
                        <a href="{{ board.profile_url }}" class="a">
                            <p>{{ board.poster_name }}</p>
                        </a>
                        <a href="#" class="a">
                            <button class="nts-show-menu no-bod" visit=""><i class="lg-i fa fa-ellipsis-v"></i></button>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        {#  #}

    {% endblock %}
{# CONTENT - END #}


{% block script_modules %}
    <script type="module" type="text/javascript" src="{{  asset('scripts/index.js')}}"></script>
    <script type="module" type="text/javascript" src="{{  asset('scripts/grow.js')}}"></script>
    <script type="module" type="text/javascript" src="{{  asset('scripts/home/home.js')}}"></script>
{% endblock %}
