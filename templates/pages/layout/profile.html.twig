{# PROFILE #}
    {% block profile_articles %}
        {% for board in canvas.notes.articles %}
            <div class="nts-host relative">
                <span id="page-assistant" class="hd" pid="{{board.pid}}"></span>
                <a href="{{ path('note_posts', {'post_id':board.pid}) }}" class="vw-anchor nts-host-anchor a">
                    <div class="nts-host-banner relative">
                        <div class="nts-host-display lozad rad2 bck" data-background-image="{{board.cover}}">
                            {% if board.note_is_img == true %}
                                <div class="nts-host-display-type nt-ui-rad4 ft-sect"><span>photo</span></div>
                            {% endif %}
                            <div class="nts-host-display-filter"></div>
                        </div>
                    </div>
                    <div class="nts-host-verb ft-sect">
                        <p>
                            <strong title="Paragraphs">{{board.paragraphs}}</strong><span class=""> paragraphs</span>
                        </p>
                    </div>
                    <div id="nts-host-title" class="nts-host-title">
                        <p class="trn3-color">{{board.if_view ~ board.title}}</p>
                    </div>
                </a>
                <div class="nts-host-verb-author ft-sect">
                    {% if board.access == 1 %}
                        <a href="#" class="a">
                            <button class="nts-show-menu-profiles no-bod"><i class="lg-i fa fa-ellipsis-v"></i></button>
                        </a>
                    {% else %}
                        <a class="a">
                            <p>[Removed]</p>
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endblock profile_articles %}
    
